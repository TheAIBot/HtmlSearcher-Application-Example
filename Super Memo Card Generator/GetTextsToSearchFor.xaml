<Window x:Class="Super_Memo_Card_Generator.GetTextsToSearchFor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Getter" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Name="TextsToFind" AcceptsReturn="True" TextWrapping="NoWrap" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Margin="5" TextChanged="TextsToFinds_TextChanged_1"/>
        <Button Name="OpenWebsite" Content="Open Website" Grid.Column="0" Grid.Row="2" Margin="5" Click="OpenWebsite_Click_1"/>
        <Button Name="Finish" IsEnabled="False" Content="Finish" Grid.Column="1" Grid.Row="2" Margin="5" Click="Finish_Click_1"/>
        <TextBlock Text="One sentence to find per line" TextWrapping="NoWrap" Grid.Column="0" Grid.Row="0" Margin="5"/>
        <TextBlock Name="ErrorMessage" Text="" TextWrapping="NoWrap" Grid.Column="1" Grid.Row="0" Margin="5"/>
    </Grid>
</Window>
