<Window x:Class="Super_Memo_Card_Generator.EditTemplates"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Templates" Height="300" Width="300" ContentRendered="Window_ContentRendered">
    <Grid>
        <ListBox Name="ListBoxWithDefaults" Margin="5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Name}"/>
                        <RadioButton Grid.Column="1" GroupName="Default" IsChecked="{Binding IsDefault}" IsThreeState="False"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
