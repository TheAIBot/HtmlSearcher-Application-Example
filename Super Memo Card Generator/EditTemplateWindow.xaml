<Window x:Class="Super_Memo_Card_Generator.EditTemplateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Template" Height="Auto" Width="500" SizeToContent="Height" ContentRendered="Window_ContentRendered">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="Template To Edit:" Margin="5,10,5,30"/>
        <ComboBox Name="AllTemplates" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Margin="5,10,5,30" IsEditable="False" LostFocus="AllTemplates_LostFocus"/>

        <TextBlock Grid.Column="0" Grid.Row="1" Text="Template Name:" Margin="5"/>
        <TextBox Name="TemplateName" Grid.Column="1" Grid.Row="1" Margin="5"  MaxLength="30" HorizontalAlignment="Left" Width="250" IsEnabled="False" TextChanged="TemplateName_TextChanged_1">
            <TextBox.ToolTip>
                <ToolTip Placement="Right" HorizontalOffset="10" VerticalOffset="20">
                    <TextBlock>The name has to be unique <LineBreak/>
                               And only contain the chars from a-z</TextBlock>
                </ToolTip>
            </TextBox.ToolTip>
        </TextBox>

        <TextBlock Grid.Column="0" Grid.Row="2" Text="Text Structure:" Margin="5"/>
        <TextBox Name="TemplateStructure" Grid.Column="1" Grid.Row="2" Margin="5" AcceptsReturn="True" Height="150" IsEnabled="False" TextChanged="TemplateStructure_TextChanged_1">
            <TextBox.ToolTip>
                <ToolTip Placement="Right" HorizontalOffset="10" VerticalOffset="20">
                    <TextBlock>Atleast  one Insterter statement has to be used <LineBreak/>
                               Inserter statement: {1}
                    </TextBlock>
                </ToolTip>
            </TextBox.ToolTip>
        </TextBox>

        <TextBlock Grid.Column="0" Grid.Row="3" Text="Is Default Template:" Margin="5"/>
        <CheckBox Name="TempateDefault" Grid.Column="1" Grid.Row="3" Margin="5" IsEnabled="False" HorizontalAlignment="Left"/>

        <TextBlock Grid.Column="0" Grid.Row="4" Text="Max Cards Per Site:" Margin="5"/>
        <ComboBox Name="TemplateMaxCards" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Margin="5" IsEditable="True" IsEnabled="False" SelectedIndex="0" LostFocus="TemplateMaxCards_LostFocus">
            <ComboBoxItem Content="Unlimited"/>
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="20"/>
            <ComboBoxItem Content="50"/>
            <ComboBoxItem Content="100"/>
            <ComboBoxItem Content="200"/>
            <ComboBoxItem Content="500"/>
            <ComboBoxItem Content="1000"/>
            <ComboBoxItem Content="5000"/>
            <ComboBox.ToolTip>
                <ToolTip Placement="Right" HorizontalOffset="10" VerticalOffset="20">
                    <TextBlock>Please chose either a positive number<LineBreak/>
                        or unlimited
                    </TextBlock>
                </ToolTip>
            </ComboBox.ToolTip>
        </ComboBox>

        <TextBlock Grid.Column="0" Grid.Row="5" Text="Use Word Converter:" Margin="5"/>
        <CheckBox Name="EnableConverter" Grid.Column="1" Grid.Row="5" Margin="5" IsEnabled="False" HorizontalAlignment="Left"/>

        <TextBlock Grid.Column="0" Grid.Row="6" Text="Website Template:" Margin="5"/>
        <TextBox Name="WebsiteTemplate" Grid.Column="1" Grid.Row="6" Margin="5" IsEnabled="{Binding ElementName=EnableConverter,Path=IsChecked}"  MaxLength="30" HorizontalAlignment="Left" Width="250" TextChanged="TemplateName_TextChanged_1">
            <TextBox.ToolTip>
                <ToolTip Placement="Right" HorizontalOffset="10" VerticalOffset="20">
                    <TextBlock>Atleast  one Insterter statement has to be used <LineBreak/>
                               Inserter statement: {1}
                    </TextBlock>
                </ToolTip>
            </TextBox.ToolTip>
        </TextBox>

        <TextBlock Grid.Column="0" Grid.Row="7" Text="Html Between words:" Margin="5"/>
        <TextBox Name="ToUseBeweenWords" Grid.Column="1" Grid.Row="7" Margin="5" IsEnabled="{Binding ElementName=EnableConverter,Path=IsChecked}"  MaxLength="30" HorizontalAlignment="Left" Width="150" TextChanged="TemplateName_TextChanged_1"/>

        <Button Name="SaveTemplate" Content="Save Changes" Grid.Column="1" Grid.Row="7" Margin="5" IsEnabled="False" HorizontalAlignment="Right" Width="Auto" Click="SaveTemplate_Click"/>
    </Grid>
</Window>
